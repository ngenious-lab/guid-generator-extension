{
  "manifest_version": 2,
  "name": "GUID Generator",
  "version": "2.0",
  "description": "Генерирует GUID/ULID/KSUID (один или несколько), с опцией Base64 и историей. Лицензия: MIT",
  "permissions": ["clipboardWrite", "storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "guid-generator@example.com"
    }
  }
}